{
    "manifest_version": 3,
    "name": "SGPBusiness Copy",
    "description": "Adds a copy button next to business legal names on sgpbusiness.com to quickly copy the name and UEN.",
    "version": "2.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "sgp-clipper@sgpbusiness",
            "strict_min_version": "109.0"
        }
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "SGP Clipper Settings"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.sgpbusiness.com/company/*",
                "*://sgpbusiness.com/company/*",
                "*://www.sgpbusiness.com/societies/*",
                "*://sgpbusiness.com/societies/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "clipboardWrite",
        "storage"
    ]
}